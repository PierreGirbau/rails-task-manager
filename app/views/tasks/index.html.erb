<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id)%> | <%= task.completed %></li>
  <%= link_to 'Delete', task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
  </li>
  <br>
  <%= link_to 'Add a new task', new_task_path %>
</ul>

